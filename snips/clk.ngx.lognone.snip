#!/ngx/nolog

###
# Snippet to exclude elements from logs
##


## Don't log favicon.ico requests and errors
## If no favicon exists return a 204 (no content error).

	location = /favicon.ico {
		try_files $uri =204;
		log_not_found off;
		access_log off;
	}

## Don't log robots.txt requests.

	location = /robots.txt {
		allow all;
		log_not_found off;
		access_log off;
	}